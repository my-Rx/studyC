{
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "rangeStart": 0,
    "rangeEnd": null,
    "requirePragma": false,
    "insertPragma": false,
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "vueIndentScriptAndStyle": false,
    "endOfLine": "lf",

    "overrides": [
        {
            "files": "Makefile",
            "options": {
                "useTabs": true,
                "semi": false
            }
        },
        {
            "files": ["*.html", "*.css"],
            "options": {
                "htmlWhitespaceSensitivity": "css"
            }
        },
        {
            "files": "*.vue",
            "options": {
                "vueIndentScriptAndStyle": false
            }
        }
    ]
}
